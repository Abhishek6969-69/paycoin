{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",  
    "paths": {
      "@repo/store": ["../../packages/store/src"],
      "@/*": ["./src/*", "./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "components/**/*.d.ts",
    "lib/**/*.d.ts",
    "pages",
    "next-env.d.ts",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
